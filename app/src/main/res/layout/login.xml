<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nguyenvba.design.LoginActivity"
    android:background="#f9fc15"
    android:weightSum="1">
    //can chinh kich co, mau sac cua trang

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="179dp"
        app:srcCompat="@drawable/holabike"
        android:id="@+id/imageView"
        android:padding="35px"
        android:layout_weight="0.12" />
//chen vao logo holabike
    <TextView
        android:text="Email:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="24sp"
        android:layout_marginLeft="35px"
        android:layout_marginRight="35dp"
        android:paddingBottom="5px"
        android:layout_marginTop="20px"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:backgroundTint="@android:color/background_dark"
        android:hint="Input email here"

        android:layout_marginLeft="35px"
        android:layout_marginRight="35px"
        android:id="@+id/etEmail" />

    <TextView
        android:text="Password:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="24sp"
        android:layout_marginLeft="35px"
        android:layout_marginRight="35px"
        android:paddingBottom="5px"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:backgroundTint="@android:color/background_dark"
        android:hint="Input password here"

        android:layout_marginLeft="35px"
        android:layout_marginRight="35px"
        android:id="@+id/etPassword"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_weight="0.12"
        tools:password="true" />



    <Button
        android:text="Login"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:id="@+id/bLogin"
        android:textColor="#f9fc15"
        android:background="#262626"
        android:textStyle="bold"
        android:layout_marginTop="35px"
        android:layout_marginLeft="35px"
        android:layout_marginRight="35px"/>

    <TextView
        android:text=" Not one of us ? Click here!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvRegister"
        android:gravity="center"
        android:layout_marginTop="30px"
        android:layout_marginLeft="170px"
        android:textSize="18sp"
        style="@style/Hyperlink" />

    <TextView
        android:text="Forgot password ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forgotPsw"
        android:layout_marginLeft="265px"
        android:layout_marginTop="20px"
        android:textSize="18sp"
        style="@style/Hyperlink" />


</LinearLayout>
